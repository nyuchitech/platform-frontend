# ðŸ‡¿ðŸ‡¼ Nyuchi Platform Environment Variables
# Copy this file to .env.local and fill in your actual values

# ============================================================================
# SUPABASE (Database + Auth)
# ============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here

# ============================================================================
# CLOUDFLARE
# ============================================================================
CLOUDFLARE_ACCOUNT_ID=your-account-id
CLOUDFLARE_API_TOKEN=your-api-token

# Cloudflare Workers
CLOUDFLARE_WORKER_URL=https://platform.nyuchi.com

# Cloudflare KV
CLOUDFLARE_KV_NAMESPACE_ID=your-kv-namespace-id

# Cloudflare R2
CLOUDFLARE_R2_BUCKET_NAME=nyuchi-storage
CLOUDFLARE_R2_ACCESS_KEY_ID=your-r2-access-key
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-r2-secret-key

# Cloudflare AI Gateway
CLOUDFLARE_AI_GATEWAY_ID=your-ai-gateway-id

# ============================================================================
# STRIPE (Payments)
# ============================================================================
STRIPE_SECRET_KEY=sk_test_your-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Stripe Product IDs
STRIPE_VERIFICATION_PRICE_ID=price_verification
STRIPE_SEO_MANAGER_PRICE_ID=price_seo_manager
STRIPE_MAILSENSE_PRICE_ID=price_mailsense
STRIPE_TRAVEL_PLATFORM_PRICE_ID=price_travel_platform

# ============================================================================
# CLAUDE AI (Anthropic)
# ============================================================================
ANTHROPIC_API_KEY=sk-ant-your-api-key
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# ============================================================================
# RESEND (Email)
# ============================================================================
RESEND_API_KEY=re_your-api-key
RESEND_FROM_EMAIL=hello@nyuchi.com

# ============================================================================
# PLATFORM CONFIGURATION
# ============================================================================
NODE_ENV=development
PLATFORM_URL=https://platform.nyuchi.com
MARKETING_URL=https://www.nyuchi.com
API_URL=https://api.nyuchi.com

# Ubuntu Philosophy
UBUNTU_PHILOSOPHY="I am because we are"
COMMUNITY_ALWAYS_FREE=true

# Zimbabwe Theme
ZIMBABWE_GREEN=#00A651
ZIMBABWE_YELLOW=#FDD116
ZIMBABWE_RED=#EF3340
ZIMBABWE_BLACK=#000000

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_AI_ANALYSIS=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_STRIPE_PAYMENTS=true
ENABLE_ADMIN_INTERFACE=true

# ============================================================================
# DEVELOPMENT
# ============================================================================
LOG_LEVEL=info
DEBUG=false
